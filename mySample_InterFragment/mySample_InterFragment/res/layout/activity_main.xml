<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mysample_interfragment.MainActivity"
    android:background="#00BBFF" >

    <fragment
        android:id="@+id/fragment1"
        android:name="com.example.mysample_interfragment.FragmentA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <fragment
        android:id="@+id/fragment2"
        android:name="com.example.mysample_interfragment.FragmentB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fragment1"
        android:layout_below="@+id/fragment1" />

</RelativeLayout>
